<div class="container py-3">
 <div class="row">
  <h3>カテゴリー編集</h3>
 </div>

 <div class="row pt-4">
   <%= form_with model: @category, url: admin_category_path(@category.id), method: :patch do |f| %>
   <%= f.label :カテゴリー名 %>
   <%= f.text_field :name %>
   <%= f.submit "変更を保存" ,class: "btn btn-primary" %>
   <%= link_to "削除する", admin_category_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
   <% end %>
 </div>
 <div>
  <%= link_to "カテゴリー一覧に戻る", admin_categories_path %>
 </div>
</div>
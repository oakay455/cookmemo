<div class="container">
  <div class="row">
    <div>
      <%= @member.name %>さんの会員詳細
    </div>
  </div>
  <div class="row">
    <div class="col-8 ml-5">
      <table class="table table-bordered ml-5">
        <tbody>
          <tr>
            <th class="col-4 text-center">会員ID</th>
            <td><%= @member.id %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">ユーザーネーム</th>
            <td>
              <%= @member.name %>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center">メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">会員ステータス</th>
            <td>
              <% if @member.active_for_authentication? %>
                <b class="text_success">有効</b>
              <% else %>
                <b class="text-muted">退会</b>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mt-4 mb-4 text-center">
      <%= link_to "編集する", edit_admin_member_path(params[:id]), class: "btn btn-success mr-3 text-white" %>　｜
      <%= link_to "#{@member.name}さんのレシピ投稿一覧を見る", admin_member_recipe_index_path(@member), class: "btn btn-info text-white" %>
      </div>
      <div>
        <%= link_to '会員一覧に戻る', admin_members_path, class: "btn btn-secondary text-white" %>
      </div>
    </div>
  </div>
</div>
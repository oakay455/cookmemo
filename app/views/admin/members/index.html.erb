<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>会員一覧</h2>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class="col-11">
        <table class="table table-bordered table-hover text-center">
          <thead>
            <tr>
              <th style="width: 10%">会員ID</th>
              <th style="width: 30%">氏名</th>
              <th style="width: 30%">メールアドレス</th>
              <th style="width: 30%">会員ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @members.each do |member| %>
            <tr onclick='window.location="<%= '/admin/members/' + member.id.to_s %>"' role="link">
              <td><%= member.id %></td>
              <td>
              <%= link_to member.name, admin_member_path(member.id), class: "text-dark" %>
              </td>
              <td><%= member.email %></td>
              <td>
                <% if member.active_for_authentication? %>
                  <b class="text-success">有効</b>
                <% else %>
                  <b class="text-muted">退会</b>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
   <div><%= link_to "管理メニュー画面に戻る", admin_root_path, class: "btn btn-secondary text-white" %></div>

    <div class="d-flex justify-content-center">
        <%= paginate @members %>
    </div>
</div>
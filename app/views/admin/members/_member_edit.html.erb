<h2>会員情報編集</h2>
<div>
<label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>
<div>
<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ニックネーム"%>
</div>
<div>
<label for="inputIntroduction">Introduction</label>
<%= f.text_area :introduction,  autofocus: true, id:"inputName", placeholder:"自己紹介"%>
</div>
<%= f.submit "変更を保存" %>
<div class="form">
  <div class="form-title">  
    アルバムに記録する
  </div>
  <%= render "layouts/errors", obj: @post %>
  <%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.file_field :post_image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :本文 %>
      <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.submit '記録する' %>
  </div>
  <% end %>
  </div>

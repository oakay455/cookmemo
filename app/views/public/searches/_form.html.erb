  <div>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({"ユーザー"=>"member", "レシピ"=>"recipe"}, {prompt: '選択して下さい'}) %>
    <%= f.select :method, options_for_select({"完全一致"=>"perfect", "前方一致"=>"forward", "後方一致"=>"backward", "部分一致"=>"partial"}, {prompt: '選択して下さい'}) %>
    <%= f.submit "検索" %>
<% end %>
</div>

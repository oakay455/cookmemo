<div class="row">
  <div class="col-10 col-sm-6 form">
    <h1 class="form-title">
      Editing profile
    </h1>
    <%= render "layouts/errors", obj: @member %>
    <%= form_with model: @member do |f| %>
      <div class="field">
        <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="field">
        <label for="inputName">ユーザーネーム</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザーネーム"%>
      </div>
      <div class="field">
        <label for="inputName">メールアドレス</label>
          <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"メールアドレス"%>
      </div>
      <div class="field">
        <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction,  autofocus: true, id:"inputName", placeholder:"自己紹介"%>
      </div>
        <%= f.submit "変更を保存", class: "btn btn-outline-secondary" %>
        <%= link_to "退会", unsubscribe_path(current_member), class: "btn btn-outline-danger col-" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-10 col-sm-6 form">
    <h1 class="form-title">
      Editing
    </h1>
    <%= render "layouts/errors", obj: @recipe %>
    <%= form_with model: @recipe, url: recipe_path(@recipe.id), method: :patch  do |f| %>
    <div class="field">
      <%= f.file_field :recipe_image, accept: "image/*" %>
    </div>
    <div class="field">
      <%= f.label :カテゴリー %>
      <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: "--選択してください--"}) %>
    </div>
    <div class="field">
      <%= f.label :タイトル %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :材料 %>
      <%= f.text_field :ingredient %>
    </div>
    <div class="field">
      <%= f.label :説明 %>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit '編集を保存する', class:"btn btn-outline-secondary btn-lg" %>
    </div>
    <% end %>
  </div>
</div>